extends ./../layouts/header.pug

block title 
      title= title


block cssLink
      link(rel="stylesheet", href="/css/style.css")
      link(rel="stylesheet", href="/css/login.css")


block jsScript
    script(src="/js/login.js" defer) 


block bodyContent
     .wrapper 
            .login_wrapper 
                  h1 Login 
                  form(action="/login", method="post")
                        label(for="username") 
                              b Username
                        input#username(type="text",class="form-control" name="username" placeholder="Enter your username or email" required=true)
                        p.error.username-error username is required

                        label(for="password") 
                              b Password
                        input#password(type="password",class="form-control" name="password" placeholder="Enter your password" required=true)
                        p.error.password-error password is required

                        input(type="submit",class="form-control" value="Login")
                  
                  p Don't have a account?
                       a(href="/register") Register here